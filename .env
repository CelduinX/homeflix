# User and Group ID for container permissions
PUID="1000"
PGID="1000"

# Timezone for container environments
TIMEZONE="Europe/Berlin"

# Optional: Plex claim token (https://plex.tv/claim)
PLEX_CLAIM=""

# Hardware Transcoding

# ⚠️ NVIDIA GPU transcoding is not supported in this Compose setup.
# Use Intel or AMD iGPU via /dev/dri. For NVIDIA, manual setup is required.

## Intel QuickSync iGPU or AMD GPU with VAAPI support:
# HW_TRANSCODE_DEVICE="/dev/dri"

## Default (no hardware transcoding)
HW_TRANSCODE_DEVICE=""

# Folder paths
PATH_TV="./media/tv"
PATH_MOVIES="./media/movies"
PATH_DOWNLOADS="./media/downloads"
PATH_INCOMPLETE="./media/incomplete"

# Config folders
PLEX_CONFIG="./config/plex"
OVERSEERR_CONFIG="./config/overseerr"
RADARR_CONFIG="./config/radarr"
SONARR_CONFIG="./config/sonarr"
SABNZBD_CONFIG="./config/sabnzbd"

# VPN config (WireGuard only)
VPN_PRIVATE_KEY=""
VPN_ADDRESSES=""
VPN_PUBLIC_KEY=""
VPN_ENDPOINT_IP=""
VPN_PORT="51820"